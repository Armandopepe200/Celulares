<div class="card card-body p-4 rounded-0 bg-dark text-white">
    <h4>Agregar Alumnos</h4>
    <form action="/celulares/agregar" method="POST">
    <center>
<h1>CELULARES</h1>
    </center>
    <ul></ul>


<div>
    <FONT COLOR="lime">
    <label for="clave">Clave:</label>
    <input type="text" name="clave" placeholder="Clave o claves del celular" id="clave"
    class="form-control bg-dark text-white"/> 
    </FONT>
</div>

<div>
    <FONT COLOR="lime">
    <label for="marca">Marca:</label>
    <input type="text" name="marca" placeholder="Marca" id="marca"
    class="form-control bg-dark text-white"/> 
    </FONT>
</div>

<div>
    <FONT COLOR="lime">
    <label for="aMaterno">Precio:</label>
    <input type="text" name="precio" placeholder="Precio de Venta" id="precio"
    class="form-control bg-dark text-white"/> 
    </FONT>
</div>

<div>
    <FONT COLOR="lime">
    <label for="fechaLan">Fecha de Lanzamiento:</label>
    <input type="date" name="fechaLan" id="fechaLan"
    class="form-control bg-dark text-white"/> 
    </FONT>
</div>

<div>
    <FONT COLOR="lime">
    <label for="RAM">RAM:</label>
    <input type="text" name="RAM" placeholder="Cantidad de Mem. RAM" id="RAM"
    class="form-control bg-dark text-white"/> 
    </FONT>
</div>

<div>
    <FONT COLOR="lime">
    <label for="almacenamiento">Almacenamiento:</label>
    <input type="text" name="almacenamiento" placeholder="Cantidad de Almacenamiento" id="almacenamiento"
    class="form-control bg-dark text-white"/> 
    </FONT>
</div>

<div>
    <FONT COLOR="lime">
    <label for="cantCamaras">Cantidad de Camaras:</label>
    <input type="text" name="cantCamaras" placeholder="Numero de Camaras" id="cantCamaras"
    class="form-control bg-dark text-white"/> 
    </FONT>
</div>

<center>
<button class="btn btn-success btn-sm mt-2">Agregar</button>
</center>
</form>
</div>